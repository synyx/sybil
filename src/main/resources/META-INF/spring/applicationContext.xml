<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean id="IPConnectionFactory" class="org.synyx.sybil.out.IPConnectionFactory" />
       
    <!-- demoBrick -->
    <bean id="demoBrickIPConnection" factory-bean="IPConnectionFactory" factory-method="createIPConnection" destroy-method="disconnect">
        <constructor-arg value="localhost" />
        <constructor-arg value="4223"/>
    </bean>
    
    <bean id="demoBrickBrickletLEDStrip" class="com.tinkerforge.BrickletLEDStrip">
        <constructor-arg value="p3c"/>
        <constructor-arg ref="demoBrickIPConnection"/>
        <property name="chipType" value="2812"/>
        <property name="frameDuration" value="10"/>
    </bean>
    
    <bean id="demoBrickOutputLEDStrip" class="org.synyx.sybil.out.OutputLEDStrip">
        <constructor-arg ref="demoBrickBrickletLEDStrip"/>
        <constructor-arg value="30"/><!-- length of LED strip -->
    </bean>
   
    <bean id="demoBrickSingleStatusOutput" class="org.synyx.sybil.out.SingleStatusOnLEDStrip">
        <constructor-arg ref="demoBrickOutputLEDStrip"/>
    </bean>
    <!-- /demoBrick -->
</beans>
        